<?xml version="1.0" encoding="utf-8"?>
<com.padcmyanmar.padcx.padc_x_thepodcastapp_mtkm.views.viewpods.PlayBackViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/rounded_corner_blue">
<com.padcmyanmar.padcx.padc_x_thepodcastapp_mtkm.views.components.RoundedCornerImageView
    android:id="@+id/iv_play_back"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/sample"
    android:scaleType="centerCrop"
    android:layout_margin="@dimen/margin_large"/>
    <TextView
        android:id="@+id/tv_play_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Women n Tech Podcasts..."
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorFullWhite"
        android:layout_toEndOf="@id/iv_play_back"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_large"
        android:textSize="@dimen/text_regular_2x"/>
    <TextView
        android:id="@+id/tv_play_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The #womenintech show is ..."
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorGray"
        android:layout_toEndOf="@id/iv_play_back"
        android:layout_below="@id/tv_play_title"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"/>

    <ProgressBar
        android:id="@+id/progressBar_play"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="180dp"
        android:progress="70"
        android:progressTint="@color/colorBlurLight"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_play_back"
        android:layout_below="@id/tv_play_description"
        android:layout_marginTop="@dimen/margin_medium"
        android:progressBackgroundTint="@color/colorFullWhite"/>
    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h left"
        android:textColor="@color/colorBlurLight"
        android:layout_toEndOf="@id/progressBar_play"
        android:layout_below="@id/tv_play_description"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium_2"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_play_pause"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_baseline_pause_circle_filled_24"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_medium"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_refresh_24"
        android:layout_toEndOf="@id/iv_play_pause"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_medium_3"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_previous"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_replay_10_24"
        android:layout_toStartOf="@id/iv_play_pause"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_medium_3"/>
    <TextView
        android:id="@+id/tv_1x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1x"
        android:textColor="@color/colorFullWhite"
        android:textSize="@dimen/text_regular_3x"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/iv_previous"
        android:layout_marginEnd="@dimen/margin_medium_3"
        android:layout_marginBottom="@dimen/margin_large"/>
    <TextView
        android:id="@+id/tv_zz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zz"
        android:textColor="@color/colorFullWhite"
        android:textSize="@dimen/text_regular_3x"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/iv_next"
        android:layout_marginStart="@dimen/margin_medium_3"
        android:layout_marginBottom="@dimen/margin_large"/>

</com.padcmyanmar.padcx.padc_x_thepodcastapp_mtkm.views.viewpods.PlayBackViewPod>