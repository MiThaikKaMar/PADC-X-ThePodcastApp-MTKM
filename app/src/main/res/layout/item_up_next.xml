<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginEnd="@dimen/margin_large"
    android:layout_marginBottom="@dimen/margin_medium">
<com.padcmyanmar.padcx.padc_x_thepodcastapp_mtkm.views.components.RoundedCornerImageView
    android:id="@+id/iv_profile"
    android:layout_width="90dp"
    android:layout_height="120dp"
    android:src="@drawable/upnext"
    android:scaleType="centerCrop"/>
    <Button
        android:id="@+id/btn_categories"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="ART &amp; DESIGN"
        android:textSize="@dimen/text_smaller"
        android:background="@drawable/rounded_corner_yellow"
        android:layout_toEndOf="@id/iv_profile"
        android:layout_marginStart="@dimen/margin_medium_3"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/sample_text"
        android:ellipsize="end"
        android:layout_toEndOf="@id/iv_profile"
        android:layout_below="@id/btn_categories"
        android:layout_marginStart="@dimen/margin_medium_3"
        android:lineSpacingExtra="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_download"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/download"
        android:layout_below="@id/btn_categories"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_alignParentRight="true"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        android:layout_marginTop="@dimen/margin_medium"
        android:progress="70"/>
    <TextView
        android:id="@+id/tv_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h left"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayLight"
        android:layout_below="@id/iv_profile"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"/>

</RelativeLayout>