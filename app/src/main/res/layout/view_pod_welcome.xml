<?xml version="1.0" encoding="utf-8"?>
<com.padcmyanmar.padcx.padc_x_thepodcastapp_mtkm.views.viewpods.WelcomeViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFullWhite">

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/welcome" />
    <TextView
        android:id="@+id/tv_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textStyle="bold"
        android:textSize="@dimen/text_heading_2x"
        android:layout_below="@id/iv_welcome"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_large"/>
    <TextView
        android:id="@+id/tv_welcome_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It looks like you aren't enrolled in any podcasts, but it's easy to get started."
        android:layout_marginStart="@dimen/margin_xxlarge"
        android:layout_marginEnd="@dimen/margin_xxlarge"
        android:layout_below="@id/tv_welcome_title"
        android:paddingEnd="@dimen/margin_large"
        android:paddingStart="@dimen/margin_large"
        android:lineSpacingExtra="@dimen/margin_medium"
        android:textSize="@dimen/text_regular_2x"/>
    <Button
        android:id="@+id/btn_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Find Something New"
        android:background="@drawable/rounded_corner_blue_light"
        android:layout_below="@id/tv_welcome_description"
        android:layout_margin="@dimen/margin_large"
        android:textSize="@dimen/text_regular_2x"/>
    <Button
        android:id="@+id/btn_reload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Reload"
        android:background="@drawable/rounded_corner_yellow"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_below="@id/btn_new"
        android:textSize="@dimen/text_regular_2x"/>
</com.padcmyanmar.padcx.padc_x_thepodcastapp_mtkm.views.viewpods.WelcomeViewPod>